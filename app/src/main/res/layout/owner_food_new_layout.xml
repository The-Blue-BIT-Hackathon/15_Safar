<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/topLinerLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Add Your "
            android:textColor="@color/black"
            android:textSize="20dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="center"
            android:text="Food Dish!"
            android:textColor="@color/orange"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp"
        android:orientation="vertical">

        <EditText
            android:id="@+id/etAddFoodDishName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/editext_drawable"
            android:fontFamily="@font/poppins_medium"
            android:hint="Enter Your Dish Name"
            android:padding="16dp"
            android:layout_marginTop="20dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enter Food Contents Here :"
            android:layout_marginTop="20dp"
            android:textSize="13sp"
            android:fontFamily="@font/poppins"/>

        <EditText
            android:id="@+id/etAddFoodDishContent"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@drawable/editext_drawable"
            android:fontFamily="@font/poppins_medium"
            android:hint="Enter Your Dish Contents"
            android:text="✅\n✅\n✅\n✅"
            android:padding="16dp"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

<!--            <TextView-->
<!--                android:id="@+id/editProfileLocation"-->
<!--                android:layout_weight="1"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:fontFamily="@font/poppins_medium"-->
<!--                android:hint="Food Type : "-->
<!--                android:layout_marginRight="5dp"-->
<!--                android:padding="16dp"-->
<!--                android:layout_marginTop="20dp"-->
<!--                android:textSize="18dp"-->
<!--                />-->

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="@drawable/editext_drawable"
                android:fontFamily="@font/poppins_medium"
                android:padding="16dp"
                android:hint="Food Type"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
                >

                <AutoCompleteTextView
                    android:id="@+id/actvPreference"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="20dp">

<!--            <TextView-->
<!--                android:layout_weight="1"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:fontFamily="@font/poppins_medium"-->
<!--                android:hint="Allergies : "-->
<!--                android:layout_marginRight="5dp"-->
<!--                android:padding="16dp"-->
<!--                android:textSize="18dp"-->
<!--                />-->


            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editext_drawable"
                android:fontFamily="@font/poppins_medium"
                android:padding="16dp"
                android:hint="Select Applicable Allergies"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"

                >

                <AutoCompleteTextView
                    android:id="@+id/actvAllergies"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Gluten Free"
            android:textSize="20dp"
            android:fontFamily="@font/poppins"
            android:layout_marginTop="20dp"
            />

        <Button
            android:id="@+id/btnregister"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            app:backgroundTint="@color/orange"
            android:fontFamily="@font/poppins_semibold"
            android:padding="15dp"
            android:text="Submit Dish"
            android:textColor="@color/white"
            android:textSize="17dp" />

    </LinearLayout>


</LinearLayout>
